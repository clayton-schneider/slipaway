---
// Import assets
import logo from "@data/home/imgs/sar-logo.png";

// Import components
import { Image } from "@astrojs/image/components";
import PrimaryBtn from "../Button/PrimaryBtn.astro";
const links = [
  { linkText: "About", link: "/about" },
  { linkText: "Tours", link: "/Tours" },
  { linkText: "FAQs", link: "/faqs" },
  { linkText: "Contact", link: "/contact" },
];

interface Props {
  className?: string;
}
const { className } = Astro.props;
---

<header class={className + " py-5 px-edge flex items-center justify-between"}>
  <a href="/"
    ><Image
      src={logo}
      alt="Slipaway River Tours Logo"
      width={120}
      height={120}
    />
  </a>

  <ul class="lg:flex space-x-6 items-center hidden text-lg">
    {links.map((link) => <a href={link.link}>{link.linkText}</a>)}
    <PrimaryBtn to="/book" text="Book Online" />
  </ul>
</header>
