---
import boat from "@data/home/imgs/boat.jpg";

// Must use to pass to react
import { getImage } from "@astrojs/image";
const { src } = await getImage({
  src: boat,
});
const images = [
  { src: src, alt: "boat" },
  { src: src, alt: "boat" },
  { src: src, alt: "boat" },
];

import { Slider } from "@components/Gallery/Slider";
---

<section class="my-40 relative">
  {/* Background Circles */}
  <div class="bg-yellow/40 h-16 w-16 rounded-full absolute left-10 top-1/2">
  </div>
  <div class="bg-purple/20 h-8 w-8 rounded-full absolute left-1/3 -top-10">
  </div>
  <div
    class="bg-blue-pastel/20 h-80 w-80 rounded-full absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2"
  >
  </div>

  <div class="flex max-w-7xl mx-auto">
    <div class="">
      <div class="max-w-lg">
        <p class="text-orange font-candal text-small font-bold">Join Us On A</p>
        <h2 class="font-candal mt-2 text-dark-blue font-bold text-3xl">
          Slipaway To The River And Enjoy The Ride!
        </h2>
        <p class="font-blue mt-4 leading-relaxed">
          Lorem ipsum dolor sit amet consectetur adipisicing elit. Alias amet
          veniam maiores tenetur totam tempora, quia incidunt cumque ea ad?
        </p>
      </div>
    </div>
    {/* showcase */}
    <div>
      <!-- <HorImgCard img={boat} alt="Slipaway River Tours" /> -->
      <Slider images={images} client:visible />
    </div>
  </div>
</section>
